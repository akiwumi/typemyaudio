# Supabase (client - exposed to browser)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# Supabase (server - keep secret)
# Use the project URL from Supabase Dashboard → Settings → API
SUPABASE_URL=https://your-project.supabase.co
# Use the service_role key (JWT starting with eyJ...) from Supabase Dashboard → Settings → API
# NOT the database connection string
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# App URL (for Stripe redirects, etc.) - e.g. https://yourapp.vercel.app
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Stripe
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
# Allowed subscription price IDs (comma-separated) - from Stripe Dashboard
STRIPE_PRICE_IDS=price_xxx,price_yyy

# OpenAI (for transcription)
OPENAI_API_KEY=sk-proj-...

# Redis (for BullMQ job queue)
REDIS_URL=redis://localhost:6379
